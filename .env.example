# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/project_management
USE_SQLITE=false

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=480

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Application Settings
PROJECT_NAME="Project Management Tool"
VERSION="1.0.0"
DEBUG=false

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@your-domain.com
EMAILS_FROM_NAME="Project Management Tool"

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_UPLOAD_EXTENSIONS=[".pdf",".doc",".docx",".xls",".xlsx",".png",".jpg",".jpeg"]

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379/0

# Monitoring (Optional)
SENTRY_DSN=
ENABLE_METRICS=false